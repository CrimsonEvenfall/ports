# description	: keymap compiler and support library
# depends	: xkeyboard-config libxcb meson libxml2

name=libxkbcommon
version=1.4.0
release=1
source="https://xkbcommon.org/download/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr \
	      --libexecdir=lib \
	      -Denable-wayland=false \
	      -Denable-docs=false
	ninja
	DESTDIR=$PKG ninja install
}
