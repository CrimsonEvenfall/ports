# description	: Scanner Access Now Easy - Scanner driver for Linux 
# depends	: libusb libtiff libpng xz

name=sane
version=1.0.32
release=1
source="https://gitlab.com/sane-project/backends/uploads/104f09c07d35519cc8e72e604f11643f/$name-backends-$version.tar.gz"

build() {
	cd $name-backends-$version

    	./configure \
		--prefix=/usr \
                --localstatedir=/var \
                --sysconfdir=/etc \
                --disable-translations \
                --disable-locking \
                --disable-latex \
                --with-group=scanner \
                --with-usb    
	make
	make -j1 DESTDIR=$PKG install

	install -D -m 644 tools/udev/libsane.rules $PKG/etc/udev/rules.d/85-libsane.rules

}
