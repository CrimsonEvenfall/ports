# description	: Keyboard management library 
# homepage	: https://gitlab.gnome.org/GNOME/libgnomekbd
# depends	: libxklavier gtk3 dconf gobject-introspection

name=libgnomekbd
version=3.26.1
release=1
source="https://gitlab.gnome.org/GNOME/libgnomekbd/-/archive/54da436258d79b683f57dfadf787bdf56ca58576/libgnomekbd-54da436258d79b683f57dfadf787bdf56ca58576.tar.bz2"

build() {
	cd libgnomekbd-54da436258d79b683f57dfadf787bdf56ca58576
	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --disable-schemas-compile 
	make
	make DESTDIR=$PKG install
}
