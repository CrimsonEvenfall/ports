# description	: Kitty is a GPU Accelerated Terminal
# homepage	: https://sw.kovidgoyal.net/kitty/
# depends	: python3 harfbuzz zlib libpng lcms2 freetype2 fontconfig libcanberra imagemagick7 python3-pygments dbus libxkbcommon libxcursor libxcb libxi libxrandr libxinerama libx11 mesa 

name=kitty
version=0.23.1
release=1
source="https://github.com/kovidgoyal/kitty/archive/refs/tags/v$version.tar.gz"

build() {
	cd $name-$version
	mkdir -p $PKG/usr/bin
	export PIP_CONFIG_FILE=os.devnull
	export PYTHONPATH=$SRC
	export PIP_TARGET=$SRC # Hai lazy I am to setup a proper virtualenv, so we just make src our "virtualenv"
	python3 -m pip install -r docs/requirements.txt
	python3 setup.py linux-package --prefix=$PKG/usr 
}
