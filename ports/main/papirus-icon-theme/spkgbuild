# description	: Papirus icon theme
# depends	: gtk3

name=papirus-icon-theme
version=20220302
release=1
source="$name-$version.tar.gz::https://github.com/PapirusDevelopmentTeam/papirus-icon-theme/archive/refs/tags/$version.tar.gz"

build() {
	cd $name-$version
	mkdir -p $PKG/usr/share/icons
	cp -R Papirus $PKG/usr/share/icons
}
