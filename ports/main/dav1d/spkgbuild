# description	: dav1d is an AV1 decoder
# depends	: meson nasm

name=dav1d
version=0.9.2
release=1
source="https://code.videolan.org/videolan/dav1d/-/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr \
	      -Denable_tests=false
	ninja
	DESTDIR=$PKG ninja install
}
