# description	: Manage EFI boot loader entries with this simple GUI.
# homepage	: https://github.com/Elinvention/efibootmgr-gui
# depends	: efibootmgr python3

name=efibootmgr-gui
version=0.1
release=1
source="https://github.com/Elinvention/efibootmgr-gui/archive/$version/$name-$version.tar.gz"

build() {
	cd efiboots-$version

	install -d $PKG/usr/bin
	install -d $PKG/usr/share/applications

	install -m644 efibootmgr.desktop $PKG/usr/share/applications
	install -m755 efibootmgr_gui.py $PKG/usr/bin/efibootmgr_gui
}
