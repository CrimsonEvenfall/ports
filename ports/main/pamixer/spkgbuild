# description	: Pulseaudio command-line mixer like amixer
# homepage	: https://github.com/cdemoulins/pamixer
# depends	: pulseaudio boost 

name=pamixer
version=1.5
release=1
source="https://github.com/cdemoulins/$name/archive/refs/tags/$version.tar.gz"

build() {
	cd $name-$version
	CXXFLAGS="$CXXFLAGS -DVERSION=$version"
	make
	install -D -m755 pamixer "$PKG"/usr/bin/pamixer
}
